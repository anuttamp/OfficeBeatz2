header
  nav(class='nav-extended nav-color nav-center')
    div(class='nav-content')
      div(class="logo", id="clickable-home")
        img(src="images/favicon.ico")
      ul(class='tabs tabs-transparent')
        li(class='tab')
          a(class='active', href='#home') Home
        li(class='tab')
          a(href='#getting-started') Getting Started
        li(class='tab')
          a(href='#about-tab') About
    include banner-message.pug
    include timer.pug
    div(class='nav-wrapper container content-container col s12')
      ul(class='middle-ul')
        div(id="space-controls")
          div(id='left-controls')
            a(class='waves-effect waves-light btn-flat light-blue accent-3' col s12, id='play')
              i(class="material-icons") play_arrow
            a(class='waves-effect waves-light btn-flat light-blue accent-3' col s12, id='skip')
              i(class="material-icons") skip_next
            a(class='waves-effect waves-light btn-flat light-blue accent-3' col s12, id='mute')
              i(class="material-icons", id="vol-change") volume_up
            div(id="vol-margin-left")
              input(id="vol-control" type="range" min="0" max="100" value="50" class='volSlider')
          div
          a(id="pop-settings")
            div(id="settings-icon-blue", class="settings-icon", style="display: block")
            div(id="settings-icon-grey", class="settings-icon")
      ul(class='middle-ul' id="song-controls")
        include song-controls.pug
    include form-holder.pug

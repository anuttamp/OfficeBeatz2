header
  nav(class='nav-extended nav-color nav-center')
    div(class='nav-content')
      div(class="logo", href='#home') 
        img(src="images/favicon.ico")
      ul(class='tabs tabs-transparent')
        li(class='tab')
          a(class='active', href='#home') Home
        li(class='tab')
          a(href='#getting-started') Getting Started
        li(class='tab')
          a(href='#old-advanced-settings') Old Advanced Settings
        li(class='tab')
          a(href='#advanced-settings') New Settings
    div(id="timer")
      p(id="timer-time")
      div
        button(id="start-timer", class="timer-button") start
        button(id="reset-timer", class="timer-button") reset
    div(class='nav-wrapper container')
      ul(class='middle-ul')
        div(id="play-skip")
          a(class='waves-effect waves-light btn-flat light-blue accent-3' col s12, id='play')
            i(class="material-icons") play_arrow        
          a(class='waves-effect waves-light btn-flat light-blue accent-3' col s12, id='skip')
            i(class="material-icons") skip_next
        div(id="vol-song")
          a(class='waves-effect waves-light btn-flat light-blue accent-3' col s12, id='mute')
            i(class="material-icons") volume_up
          div(id="slider-song")
            input(id="vol-control" type="range" min="0" max="100" value="50" class='volSlider')
            include song-controls.pug
        div
          i(class="settings-icon") settings
            